
generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  metas     Meta[]
  createdAt DateTime @default(now())
}

model Meta {
  id           String   @id @default(uuid())
  title        String
  description  String?
  dailyMinutes Int
  startDate    DateTime
  endDate      DateTime
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  studies      Study[]
  createdAt    DateTime @default(now())
}

model Study {
  id        String   @id @default(uuid())
  date      DateTime
  minutes   Int
  completed Boolean  @default(false)
  meta      Meta     @relation(fields: [metaId], references: [id])
  metaId    String
}
